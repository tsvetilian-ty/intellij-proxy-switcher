<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.tsvetilian.intellijproxyswitcher</id>
    <name>Proxy Switcher</name>
    <vendor url="https://tsvetilian.com">Tsvetiliyan Yankov</vendor>
    <description><![CDATA[
Quick way to switch between the different proxy modes for your IDE:
<ul>
  <li>No Proxy</li>
  <li>Auto-detect proxy settings</li>
  <li>Manual proxy configuration</li>
</ul>
For more information visit the
<a href="https://github.com/tsvetilian-ty/intellij-proxy-switcher">GitHub project</a>.
]]>
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action
                id="ProxySwitcherAction"
                class="com.github.tsvetilianty.intellijproxyswitcher.ProxySwitcherAction"
                text="Proxy Switcher"
                description="Switch between No Proxy, Auto Proxy, and Manual Proxy settings">

            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <keyboard-shortcut
                    first-keystroke="shift meta S"
                    keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
